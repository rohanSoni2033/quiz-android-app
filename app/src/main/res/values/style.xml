<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="optionButton">
        <item name="android:background">@drawable/option_button_selector</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:padding">20dp</item>
        <item name="android:gravity">start</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/medium</item>
    </style>

    <style name="changeQuestionButton" parent="optionButton">
        <item name="android:background">@drawable/change_question_button_selector</item>
        <item name="android:textColor">@color/next_button_text_color</item>
        <item name="android:drawableTint">@color/next_button_text_color</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="questionNumberButton" parent="optionButton">
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/option_button_selector</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>